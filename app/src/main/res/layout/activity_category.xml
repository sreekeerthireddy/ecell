<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".category">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Upload event"
       android:textSize="18sp"
       android:textColor="#000000"
       android:id="@+id/eventtext"
       android:paddingLeft="15dp"
       android:paddingTop="23dp"
       android:paddingBottom="23dp"
      />
   <View
       android:layout_below="@id/eventtext"
       android:id="@+id/v0"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@android:color/darker_gray"></View>


   <TextView
       android:layout_below="@id/v0"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Delete Event"
       android:textSize="18sp"
       android:textColor="#000000"
       android:id="@+id/preveventtext"
       android:paddingLeft="15dp"
       android:paddingTop="23dp"
       android:paddingBottom="23dp"
       />
   <View
      android:layout_below="@id/preveventtext"
       android:id="@+id/v1"
       android:layout_width="match_parent"
       android:layout_height="1dp"
      android:background="@android:color/darker_gray"></View>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/v1"
       android:text="Upload Team"
       android:textColor="#000000"
       android:paddingLeft="15dp"
       android:paddingTop="23dp"
       android:paddingBottom="23dp"
       android:textSize="18sp"
       android:id="@+id/teamtext"
       />
   <View
       android:layout_below="@id/teamtext"
       android:id="@+id/v2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@android:color/darker_gray"></View>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Delete team"
       android:textColor="#000000"
       android:layout_below="@id/v2"
       android:paddingLeft="15dp"
       android:paddingTop="23dp"
       android:paddingBottom="23dp"
       android:textSize="18sp"
       android:id="@+id/alumnitext"
       />
   <View
       android:layout_below="@id/alumnitext"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@android:color/darker_gray"></View>

</RelativeLayout>