<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".alumini">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:id="@+id/i1"
        android:src="@drawable/connect"/>
    <TextView
        android:id="@+id/mission"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="The path for the pursuit of entrepreneurial excellence is paved by pioneers who have toiled hard. This section is to rekindle the camaraderie between alumini and current members. Why? Because experience is a great teacher and an experienced teacher is the perfect one to learn from. Kindly provide your details. We are happy to connect with you!"
        android:layout_below="@id/i1"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine"
        android:gravity="left"
        android:breakStrategy="balanced"
        android:textSize="17sp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>

</ScrollView>